<div class="flex w-100vh justify-center items-center pt-4 mb-4">
    <h1 class="text-4xl font-bold">Show Question</h1>
</div>

<div class="flex justify-around items-center mt-2 mb-4">
    <div>
        <h2 class="text-4xl font-bold">Title: <%= @question.title %></h2>
    </div>
    <div>
        <p class="text-2xl">Name: <%= @question.name %></p>
    </div>
</div>

<div class="flex justify-center items-center mb-4 pt-2">
    <div>
        <p>Content: <%= @question.content %></p>
    </div>
</div>

<div>
    <div class="flex w-100vh justify-center items-center pt-4 mb-2">
        <h1 class="text-4xl font-bold">Answers</h1>
    </div>
    <% @question.answers.each do |answer| %>
        <div class="flex justify-center items-center mt-2 mb-2 pt-2 py-2">
            <p class="text-xl font-bold">
                Name: <%= answer.name %>
            </p>
        </div>
        <div class="flex justify-center items-center mt-2 mb-2 pt-2 py-2">
            <p class="text-xl font-bold">
                Content: <%= answer.content %>
            </p>
        </div>

        <div class="flex justify-center items-center mt-2 mb-2 pt-2 py-2">
            <p>
                <%= link_to 'Delete Answer', [answer.question, answer], data: {turbo_method: 'delete', turbo_confirm: 'Are you sure?'}, class: "font-medium text-blue-600 dark:text-blue-500 hover:underline" %>
            </p>
        </div>
    <% end %>
</div>

<div>
    <div class="flex w-100vh justify-center items-center pt-4 mb-2">
        <h1 class="text-4xl font-bold">Add a Answer</h1>
    </div>
    
    <div class="bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4 flex-col">
        <%= form_with model: [@question, @question.answers.build] do |form| %>
        <div class="mb-6">
            <%= form.label :name, class: "block text-gray-700 text-xl font-bold mb-2" %>
            <%= form.text_field :name, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
        </div>
        <div class="mb-6">
            <%= form.label :content, class: "block text-gray-700 text-xl font-bold mb-2" %>
            <%= form.text_area :content, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
        </div>
        <div class="flex justify-center items-center">
            <button class="mb-6 bg-blue-500 hover:bg-blue-700 font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline">
                <%= form.submit "投稿", class: "text-white" %>
             </button>
        </div>
    <% end %>
    </div>
</div>

<div class="flex justify-center items-center pt-4 mt-4 pb-4 mb-4">
    <%= link_to 'top', questions_path, class: "font-medium text-xl bg-blue-500 text-white dark:text-white hover:underline hover:bg-blue-700 rounded-md p-2" %>
</div>